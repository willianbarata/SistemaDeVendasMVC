@{
    ViewData["Title"] = "Login";
    Layout = null;
}

@model SistemaDeVendas.Models.LoginViewModel;

<link href="~/css/login.css" rel="stylesheet" />

<div class="wrapper fadeInDown">
    <div id="formContent">
        <!-- Tabs Titles -->
        <!-- Icon -->
        <div class="fadeIn first">
            <div style="float: left; width: 100%; height: 20px" ></div>
            <img height="60" width="100" src="~/img/logo.png" id="icon" />
            <div style="float: left; width: 100%; height: 20px"></div>
        </div>

        <!-- Login Form -->
        <form asp-controller="Login" asp-action="Index" method="post">
            <input asp-for="Email" type="text" class="fadeIn second"  placeholder="Email">
            <span asp-validation-for="Email" class="text-danger" style="color: red;"></span>
            <input asp-for="Senha" type="password" class="fadeIn third"  placeholder="Senha">
            <span asp-validation-for="Senha" class="text-danger" style="color: red;"></span>
            <br/>
            <input type="submit" class="fadeIn fourth" value="Entrar"> 
            <br />
            <span style="color: red;">@ViewData["ErroLogin"]</span>
        </form>

        <!-- Remind Passowrd -->
        <div id="formFooter">
            <a class="underlineHover" href="#">Esqueceu a senha ?</a>
        </div>

    </div>
</div>